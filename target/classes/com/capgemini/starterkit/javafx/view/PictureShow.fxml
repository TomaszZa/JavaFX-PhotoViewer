<?scenebuilder-stylesheet ../css/standard.css?>
<?import java.lang.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.image.ImageView?>

<AnchorPane prefHeight="400.0" prefWidth="200" xmlns="http://javafx.com/javafx/8.0.51" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.capgemini.starterkit.javafx.controller.Controller">
   <GridPane hgap="10" vgap="10" layoutX="20.0" layoutY="20.0">
     <columnConstraints>
      <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="200.0" />
      <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
     </columnConstraints>
     <rowConstraints>
      <RowConstraints minHeight="10.0" prefHeight="10.0" vgrow="SOMETIMES" />
      <RowConstraints minHeight="10.0" prefHeight="10.0" vgrow="SOMETIMES" />
     </rowConstraints>
     <children>
     <Label text="%label.folderPrescription" GridPane.columnIndex="0" GridPane.rowIndex="0"/> 
     <TextField fx:id="sourceField" maxWidth="1.7976931348623157E308" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
     <Button fx:id="addSource"  defaultButton="false" mnemonicParsing="false" GridPane.columnIndex="1" onAction="#sourceAdded" text="%button.addSource" GridPane.rowIndex="1"/>
     </children>
   </GridPane>
   <GridPane hgap="10" vgap="10" layoutX="20.0" layoutY="70.0">    
     <ImageView fx:id="imageToShow" fitHeight="300.0" fitWidth="450.0" layoutX="69.0" layoutY="322.0" pickOnBounds="true" preserveRatio="true" />
   </GridPane>
   <GridPane hgap="10" vgap="0" layoutX="100.0" layoutY="300.0">
    <columnConstraints>
      <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="40.0" />
      <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="50.0" />
    </columnConstraints>
    <rowConstraints>
      <RowConstraints minHeight="10.0" prefHeight="10.0" vgrow="SOMETIMES" />
    </rowConstraints>
    <children>
      <Button fx:id="left"  defaultButton="false" mnemonicParsing="false" onAction="#leftButtoClict" text="%button.left" />
      <Button fx:id="right" GridPane.columnIndex="1" defaultButton="false" mnemonicParsing="false" onAction="#rightButtonClict" text="%button.right" />
    </children>
   </GridPane>
</AnchorPane>
